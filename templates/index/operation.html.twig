{% extends 'base.html.twig' %}
{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="d-flex justify-content-center align-items-center">
    {{ form_start(form, {'attr': {'class': 'row row-cols-lg-auto g-3 align-items-center text-center'}}) }}
        <div class="col-12">
            {{ form_row(form.a) }}
        </div>

        <div class="col-12">
            {{ form_row(form.b) }}
        </div>
        
        <div class="col-12">
            {{ form_widget(form.submit, {'attr': {'class': 'btn-success btn-lg', 'type': "submit"}}) }}
        </div>
    {{ form_end(form) }}

</div>

